##### ALIASES #####
alias ll="ls -hal --color=always"
alias ls="ls --color=always"
alias watch="watch -c"
alias dmesg="dmesg --human --color=always"
alias df="df -h"
alias sr="shutdown -r 0"
alias sd="shutdown -P 0"
alias clr="clear"
alias seek="find . -xdev -name"
alias sshmd5="ssh-keygen -E md5 -lf"
alias tree="tree -C"
alias grep="grep --color=always"
alias less="less -r"
alias ssh="TERM=putty ssh"
alias pn="ps aux | grep"
# terraform
alias ta="terraform apply"
alias ts="terraform show"
alias to="terraform output"
# shell
alias bashup="source ~/.bashrc"
alias zshup="source ~/.zshrc"
# kubernetes
alias kc="kubectl"
alias kuc="kubectl config use-context"
# git
alias gpom="git push origin master"
alias gPom='git pull origin master'
alias gpo="git push origin"
alias gst="git status"
alias gad="git add"
alias gdf="git diff"
